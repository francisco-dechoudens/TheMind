<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheMind.Views.PlayerGamePage"
             x:Name="this"
             xmlns:controls="clr-namespace:TheMind.Views.Controls"
             xmlns:viewModel="clr-namespace:TheMind.ViewModels"
             BackgroundColor="Black">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"  
                    iOS="20,40,20,20"  
                    Android="20,30,20,20">
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.BindingContext>
        <viewModel:PlayerGamePageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid> 
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <controls:HealthBarView Grid.Row="0"  
                                    NoOfHearts="3"/>   

            <controls:HandOfCardsView Grid.Row="1"
                                      CardsInHand="{Binding Cards}"/>   
             
            <!--<controls:PowerBarView Grid.Row="2"
                                   NoOfPowers="5"/>-->


            <Button Grid.Row="2" Text="Get Cards" Command="{Binding GetCardsCommand}" />

            </Grid>



    </ContentPage.Content>
</ContentPage>
