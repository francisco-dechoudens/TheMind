<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheMind.Views.SearchRoomPage"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Enter a RoomID" TextColor="White"/>
            <Entry Placeholder="#JF93S9" Text="{Binding RoomId}"/>
            <Button TextColor="White"
                    BorderColor="White"
                    BackgroundColor="Transparent"
                    BorderWidth="2"
                    Text="Search Room"
                    Command="{Binding SearchRoomCommand}"/>

            <Label Padding="0,20,0,0" Text="Enter a nickname" TextColor="White"/>
            <Entry Placeholder="Nickname" Text="{Binding Nickname}"/>
            <Button TextColor="White"
                    BorderColor="White"
                    BackgroundColor="Transparent"
                    BorderWidth="2"
                    Text="Join"
                    Command="{Binding JoinRoomCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
